<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.perfil.NovoUsuarioController"
            stylesheets="@novo-usuario.css">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" prefWidth="800.0" prefHeight="400.0">
            <children>
                <VBox alignment="CENTER" spacing="10.0" styleClass="card">
                    <children>
                        <Label text="Novo usuário" styleClass="label-titulo"/>
                        <Label text="Cadastre um usuário novo para acessar o sistema" styleClass="label-texto"/>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="Nome" styleClass="label-text"/>
                                    <TextField fx:id="textFieldNome" styleClass="rounded-textfield"/>
                                    <Label fx:id="labelErrorNome" styleClass="error-label" textFill="RED"/>
                                </VBox>
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="E-mail" styleClass="label-text"/>
                                    <TextField fx:id="textFieldEmail" styleClass="rounded-textfield"/>
                                    <Label fx:id="labelErrorEmail" styleClass="error-label" textFill="RED"/>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="Nova senha" styleClass="label-text"/>
                                    <PasswordField fx:id="passwordFieldSenhaNova" styleClass="password-field"/>
                                    <Label fx:id="labelErrorSenhaNova" styleClass="error-label" textFill="RED"/>
                                </VBox>
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="Confirmar senha" styleClass="label-text"/>
                                    <PasswordField fx:id="passwordFieldConfirmarSenha" styleClass="password-field"/>
                                    <Label fx:id="labelErrorConfirmarSenha" styleClass="error-label" textFill="RED"/>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <!-- CheckBox fx:id="checkBoxEhAdm" text="Administrador" styleClass="check-box-eh-adm"/> -->
                                <Button fx:id="buttonCadastrarUsuario" text="Criar usuário"
                                        onAction="#onClickCadastrarUsuario"
                                        styleClass="button-cadastrar-usuario"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.PerfilController"
            stylesheets="@perfil.css"
>
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label alignment="TOP_CENTER" styleClass="label-titulo" text="Informações do perfil " />
                  <Label styleClass="label-texto" text="Atualize as informações do seu perfil e endereço de email. " />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="label-textfield" text="Nome:" />
                        <TextField fx:id="textFieldNome" styleClass="textfield" />
                         <Label fx:id="labelErrorNome" styleClass="error-label" textFill="RED" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="label-textfield" text="E-mail:" />
                        <TextField fx:id="textFieldEmail" styleClass="textfield" />
                         <Label fx:id="labelErrorEmail" styleClass="error-label" textFill="RED" />
                     </children>
                  </VBox>
                  <Button fx:id="buttonAtualizarPerfil" mnemonicParsing="false" onAction="#onClickAtualizarPerfil" text="Atualizar Perfil" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label alignment="TOP_CENTER" styleClass="label-titulo" text="Atualizar senha " />
                  <Label styleClass="label-texto" text=" Certifique-se de usar uma senha difícil para uma maior segurança. " />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="label-textfield" text="Antiga senha:" />
                        <PasswordField fx:id="passwordFieldSenhaAntiga" />
                         <Label fx:id="labelErrorSenhaAntiga" styleClass="error-label" textFill="RED" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="label-textfield" text="Nova senha:" />
                        <PasswordField fx:id="passwordFieldSenhaNova"/>
                         <Label fx:id="labelErrorSenhaNova" styleClass="error-label" textFill="RED" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="label-textfield" text="Confirmar senha:" />
                        <PasswordField fx:id="passwordFieldConfirmarSenha" />
                         <Label fx:id="labelErrorConfirmarSenha" styleClass="error-label" textFill="RED" />
                     </children>
                  </VBox>
                  <Button fx:id="buttonAlterarSenha" mnemonicParsing="false" onAction="#onClickAlterarSenha" text="Alterar Senha" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label alignment="TOP_CENTER" styleClass="label-titulo" text=" Deletar conta " />
                  <Label prefHeight="60.0" prefWidth="600.0" styleClass="label-texto" text="Quando deletar sua conta, todos os seus recursos e dados serão permanentemente excluídos. Antes de deletar sua conta, faça o download de quaisquer dados ou informações que você deseja reter. " />
                  <Button fx:id="buttonDeletarPerfil" mnemonicParsing="false" onAction="#onClickDeletarPerfil" text="Deletar Perfil" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

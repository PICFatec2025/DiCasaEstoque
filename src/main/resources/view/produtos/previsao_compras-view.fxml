<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<!--
    ARQUITETURA MVC (Model-View-Controller):
    View (FXML) - Interface visual
    Controller - Lógica de controle (definido em fx:controller)
    Model - Dados (DTOs e Services)

    CONCEITOS DE POO NO FXML:
    1. COMPOSIÇÃO: Elementos contidos em containers (VBox, HBox)
    2. HIERARQUIA: Estrutura em árvore de elementos visuais
    3. IDENTIFICAÇÃO: Elementos com fx:id para referência no Controller
    4. BINDING: PropertyValueFactory conecta colunas da tabela aos métodos do DTO
    5. EVENT DRIVEN: Ações (onAction) disparam métodos no Controller
-->

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dicasa.estoque.controller.produtos.PrevisaoDeComprasController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #FFE0B2;">

    <!-- Cabeçalho -->
    <HBox alignment="CENTER" style="-fx-padding: 10;">
        <Label text="Previsão de Compras"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: black;"/>
    </HBox>

    <!-- Área de Filtros -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Filtrar:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtFiltro" promptText="Nome do produto" prefWidth="200"/>
            <Label text="Urgência:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="cbUrgencia" promptText="Todos níveis" prefWidth="120"/>
        </HBox>
    </VBox>

    <!-- Tabela de Produtos para Repor -->
    <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Produtos para Repor:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <!-- LABEL DINÂMICO: Atualizado via binding do Controller -->
            <Label fx:id="lblContador" text="Produtos encontrados: 0"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </HBox>

        <!-- TABLEVIEW: Componente complexo com colunas e dados bindados -->
        <TableView fx:id="tabelaProdutos" prefHeight="300">
            <columns>
                <!-- COLUNA: Cada TableColumn usa PropertyValueFactory para binding -->
                <TableColumn prefWidth="150" text="Produto">
                    <cellValueFactory>
                        <!-- BINDING: Conecta coluna ao método nomeProdutoProperty() do DTO -->
                        <PropertyValueFactory property="nomeProduto" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Tipo">
                    <cellValueFactory>
                        <PropertyValueFactory property="tipo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Estoque Atual">
                    <cellValueFactory>
                        <PropertyValueFactory property="estoqueAtual" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="80" text="Mínimo">
                    <cellValueFactory>
                        <PropertyValueFactory property="estoqueMinimo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="80" text="Comprar">
                    <cellValueFactory>
                        <PropertyValueFactory property="quantidadeComprar" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100" text="Urgência">
                    <cellValueFactory>
                        <PropertyValueFactory property="nivelUrgencia" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </VBox>

    <!-- Área de Ações -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
        <!-- BUTTON: Componentes de ação com eventos definidos -->
        <Button text="Gerar Lista de Compras"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                onAction="#gerarListaCompras"/>
        <Button text="Exportar CSV"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                onAction="#exportarParaCSV"/>
        <Button text="Limpar Filtros"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                onAction="#limparFiltros"/>
    </HBox>

</VBox>
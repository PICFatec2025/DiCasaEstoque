<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #FFE0B2;">

    <HBox alignment="CENTER" style="-fx-padding: 10;">
        <Label text="Relatório de Consumos"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: black;"/>
    </HBox>

    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc;">
        <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT">
            <Label text="Período:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="dpDataInicio" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Até" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <DatePicker fx:id="dpDataFim" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label text="Filtrar por:" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
            <ComboBox fx:id="cbFiltro" prefWidth="150" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
            <Button text="Limpar Filtros" GridPane.rowIndex="0" GridPane.columnIndex="6"
                    style="-fx-background-color: #FFA726; -fx-text-fill: black; -fx-font-weight: bold;"/>
        </GridPane>
    </VBox>

    <HBox spacing="30" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Total Consumido: 0 Unidades" style="-fx-font-weight: bold;"/>
        <Label text="Valor Total: R$ 0,00" style="-fx-font-weight: bold;"/>
        <Label text="Produto Mais Consumido: Nenhum" style="-fx-font-weight: bold;"/>
    </HBox>

    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Resumo por produto" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <HBox spacing="10" alignment="CENTER">
            <ProgressBar progress="0.5" prefWidth="120"/>
            <ProgressBar progress="0.5" prefWidth="120"/>
            <ProgressBar progress="0.5" prefWidth="120"/>
            <ProgressBar progress="0.5" prefWidth="120"/>
        </HBox>
        <Button text="Gerar Relatório"
                style="-fx-background-color: #FFA726; -fx-text-fill: black; -fx-font-weight: bold;"/>
    </VBox>

    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #cccccc;">
        <TableView fx:id="tabelaConsumos" prefHeight="200">
            <columns>
                <TableColumn text="Data" prefWidth="100"/>
                <TableColumn text="Produto" prefWidth="150"/>
                <TableColumn text="Qtd" prefWidth="80"/>
                <TableColumn text="Valor Unitário" prefWidth="120"/>
                <TableColumn text="Valor Total" prefWidth="120"/>
            </columns>
        </TableView>
        <Label text="Estoque Total Atual: 1250 unidades    Movimentações no período: 85 entradas | 42 saídas"
               style="-fx-font-size: 12px; -fx-text-fill: #333333;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
        <Button text="Exportar para PDF" style="-fx-background-color: #FFA726; -fx-text-fill: black; -fx-font-weight: bold;"/>
        <Button text="Exportar para Excel" style="-fx-background-color: #FFA726; -fx-text-fill: black; -fx-font-weight: bold;"/>
        <Button text="Imprimir" style="-fx-background-color: #FFA726; -fx-text-fill: black; -fx-font-weight: bold;"/>
    </HBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" stylesheets="@editar-estoque-form.css" xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dicasa.estoque.controller.estoque.EditarEstoqueController">
    <children>
        <GridPane styleClass="tabela-edicao" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="180.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Linha 1: Quantidade Atual -->
                <Label styleClass="texto-edicao" text="Quantidade Atual" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="textQuantidadeForm" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label fx:id="errorNameLabelQuantidade" styleClass="texto-erro" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                <!-- Linha 2: Quantidade Mínima -->
                <Label styleClass="texto-edicao" text="Quantidade Mínima" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="textMinimoForm" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label fx:id="errorNameLabelMinimo" styleClass="texto-erro" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <!-- Linha 3: Quantidade Emergencial -->
                <Label styleClass="texto-edicao" text="Quantidade emergencial" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="textEmergencialForm" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label fx:id="errorNameLabelEmergencial" styleClass="texto-erro" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                <!-- Linha 4: Botões -->
                <HBox alignment="CENTER_LEFT" prefHeight="69.0" prefWidth="603.0" spacing="15.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onClickButtonSave" styleClass="botao-salvar" text="Salvar" HBox.hgrow="ALWAYS" />
                        <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onClickButtonCancel" prefHeight="41.0" prefWidth="215.0" styleClass="botao-cancelar" text="Cancelar" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
    </children>
</AnchorPane>

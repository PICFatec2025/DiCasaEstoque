<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="dicasa.estoque.controller.estoque.RelatorioEstoqueController">
    <BorderPane >

        <!-- Barra lateral com opções -->
        <left>
            <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Controle de Estoque"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;">
                    <padding>
                        <Insets bottom="20"/>
                    </padding>
                </Label>

                <Button text="Alimentos Perecíveis"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200;">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Button>

                <Button text="Alimentos Não Perecíveis"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200;">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Button>

                <Button text="Consumo dos Alimentos"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200;">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <Button text="Sair"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200;">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Button>
            </VBox>
        </left>

        <!-- Área central com fundo laranja -->
        <center>
            <VBox spacing="20" style="-fx-background-color: #f39c12; -fx-padding: 30;">

                <!-- Título -->
                <Label text="Estoque Atual"
                       style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-alignment: center;"
                       maxWidth="Infinity"/>

                <!-- Caixa branca com bordas arredondadas -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">

                    <!-- Tabela de estoque -->
                    <TableView prefHeight="300" style="-fx-background-radius: 5;">
                        <columns>
                            <TableColumn text="Produto" prefWidth="200"/>
                            <TableColumn text="Categoria" prefWidth="150"/>
                            <TableColumn text="Estoque Atual" prefWidth="120"/>
                            <TableColumn text="Mínimo" prefWidth="120"/>
                            <TableColumn text="Status" prefWidth="120"/>
                        </columns>
                        <placeholder>
                            <Label text="Não há conteúdo na tabela"
                                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- Botões de ação -->
                <HBox spacing="20" alignment="CENTER">
                    <Button text="Salvar"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 20;"/>
                    <Button text="Cancelar"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 20;"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>

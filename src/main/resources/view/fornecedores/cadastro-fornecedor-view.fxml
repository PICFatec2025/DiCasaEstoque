<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dicasa.estoque.controller.fornecedores.CadastroFornecedorController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="16.0" AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <Label text="Cadastro de Fornecedor" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <GridPane hgap="12.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="120.0" prefWidth="140.0" />
                    <ColumnConstraints minWidth="200.0" prefWidth="240.0" hgrow="ALWAYS" />
                    <ColumnConstraints minWidth="120.0" prefWidth="140.0" />
                    <ColumnConstraints minWidth="200.0" prefWidth="240.0" hgrow="ALWAYS" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                    <RowConstraints minHeight="35.0" prefHeight="35.0" />
                </rowConstraints>

                <Label text="Razão Social" GridPane.rowIndex="0" />
                <TextField fx:id="txtRazaoSocial" promptText="Razão Social" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Nome Fantasia" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="txtNomeFantasia" promptText="Nome Fantasia" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="CNPJ" GridPane.rowIndex="1" />
                <TextField fx:id="txtCnpj" promptText="00.000.000/0000-00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Contato" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="txtContato" promptText="Nome do responsável" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="E-mail" GridPane.rowIndex="2" />
                <TextField fx:id="txtEmail" promptText="contato@empresa.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Telefone principal" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtTelefonePrincipal" promptText="(00) 00000-0000" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label text="Telefone adicional" GridPane.rowIndex="3" />
                <TextField fx:id="txtTelefoneSecundario" promptText="(00) 00000-0000" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Logradouro" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="txtLogradouro" promptText="Rua, avenida..." GridPane.columnIndex="3" GridPane.rowIndex="3" />

                <Label text="Complemento" GridPane.rowIndex="4" />
                <TextField fx:id="txtComplemento" promptText="Bloco, sala..." GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Bairro" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <TextField fx:id="txtBairro" promptText="Bairro" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                <Label text="Cidade" GridPane.rowIndex="5" />
                <TextField fx:id="txtCidade" promptText="Cidade" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="UF" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                <TextField fx:id="txtUf" promptText="UF" prefColumnCount="2" GridPane.columnIndex="3" GridPane.rowIndex="5" />

                <Label text="CEP" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="txtCep" promptText="00000-000" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </GridPane>

            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Salvar" onAction="#onSalvarFornecedor" prefWidth="140" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar" prefWidth="140" />
            </HBox>
            <Label fx:id="lblMensagem" textFill="#b00020" />
        </VBox>
    </children>
</AnchorPane>

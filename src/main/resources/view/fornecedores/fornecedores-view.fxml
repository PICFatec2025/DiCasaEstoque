<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            stylesheets="@fornecedores.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.fornecedores.FornecedorController">

    <children>
        <VBox id="card" alignment="TOP_CENTER" spacing="15"
              prefWidth="950"
              AnchorPane.topAnchor="25.0"
              AnchorPane.bottomAnchor="25.0"
              AnchorPane.leftAnchor="25.0"
              AnchorPane.rightAnchor="25.0">

            <!-- Cabeçalho -->
            <HBox alignment="CENTER" spacing="10" prefWidth="900">
                <Label fx:id="lblTitulo" id="titleLabel" text="Fornecedores" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCadastrar" id="btnCadastrar" text="Cadastrar" onAction="#onClickCadastrarFornecedor"/>
            </HBox>

            <!-- Filtros -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Período:" />
                <TextField fx:id="txtPeriodo" promptText="De" prefWidth="90" />
                <Label text="Até" />
                <TextField fx:id="txtAte" promptText="Até" prefWidth="90" />

                <Button fx:id="btnBuscar" id="btnBuscar" text="Buscar" onAction="#onClickBuscar" />

                <Label text="Filtrar por:" />
                <ComboBox fx:id="cbFiltro" prefWidth="180" promptText="Selecione um filtro" />

                <Button fx:id="btnLimpar" id="btnLimpar" text="Limpar Filtros" onAction="#onClickLimparFiltros" />
            </HBox>

            <!-- Tabela -->
            <TableView fx:id="tabelaFornecedores" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colRazaoSocial" text="Razão Social" prefWidth="160" />
                    <TableColumn fx:id="colCnpj" text="CNPJ" prefWidth="120" />
                    <TableColumn fx:id="colEndereco" text="Endereço" prefWidth="200" />
                    <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="120" />
                    <TableColumn fx:id="colEmail" text="E-mail" prefWidth="180" />
                    <TableColumn fx:id="colContato" text="Pessoa de Contato" prefWidth="160" />
                </columns>
            </TableView>

            <!-- Ações adicionais -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="btnAddProduto" id="btnAddProduto" text="Adicionar Produto" onAction="#onClickAdicionarProduto" />
                <Button fx:id="btnExportar" id="btnExportar" text="Exportar Dados" onAction="#onClickExportar" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>

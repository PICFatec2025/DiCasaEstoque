<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            stylesheets="@fornecedores.css"
            xmlns="http://javafx.com/javafx/21.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.fornecedores.FornecedorController">

    <children>
        <!-- Card Principal -->
        <VBox id="card" alignment="TOP_CENTER" spacing="15"
              prefWidth="950"
              AnchorPane.topAnchor="25.0"
              AnchorPane.bottomAnchor="25.0"
              AnchorPane.leftAnchor="25.0"
              AnchorPane.rightAnchor="25.0">

            <!-- Cabeçalho -->
            <HBox alignment="CENTER" spacing="10" prefWidth="900">
                <Label fx:id="lblTitulo" id="titleLabel" text="Fornecedores" styleClass="title-label" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCadastrar" id="btnCadastrar" text="Cadastrar" onAction="#onClickCadastrarFornecedor" />
            </HBox>

            <!-- Sistema de Busca -->
            <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="900">
                <Label text="Buscar por:" />
                <ComboBox fx:id="cbTipoBusca" prefWidth="150" />
                <TextField fx:id="txtBusca" promptText="Digite para buscar..." prefWidth="250" />
                <Button fx:id="btnBuscar" id="btnBuscar" text="Buscar" onAction="#onClickBuscar" />
                <Button fx:id="btnLimpar" id="btnLimpar" text="Limpar Busca" onAction="#onClickLimparBusca" />
            </HBox>

            <!-- Tabela de Fornecedores -->
            <TableView fx:id="tabelaFornecedores" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colRazaoSocial" text="Razão Social" prefWidth="180" />
                    <TableColumn fx:id="colNomeFantasia" text="Nome Fantasia" prefWidth="150" />
                    <TableColumn fx:id="colCnpj" text="CNPJ" prefWidth="130" />
                    <TableColumn fx:id="colEndereco" text="Endereço" prefWidth="200" />
                    <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="120" />
                    <TableColumn fx:id="colCidade" text="Cidade/UF" prefWidth="120" />
                </columns>
            </TableView>

            <!-- Ações adicionais -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="btnAddProduto" id="btnAddProduto" text="Adicionar Produto" onAction="#onClickAdicionarProduto" />
                <Button fx:id="btnExportar" id="btnExportar" text="Exportar Dados" onAction="#onClickExportar" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
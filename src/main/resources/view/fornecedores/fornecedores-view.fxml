<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@fornecedores.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dicasa.estoque.controller.fornecedores.FornecedorController">

    <children>
        <VBox id="card" alignment="TOP_CENTER" prefWidth="950" spacing="15" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">

            <HBox alignment="CENTER" prefWidth="900" spacing="10">
                <Label id="titleLabel" text="Fornecedores" HBox.hgrow="ALWAYS" />
                <Button id="btnCadastrar" onAction="#onClickCadastrarFornecedor" text="Cadastrar" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Período:" />
                <TextField fx:id="txtPeriodo" prefWidth="80" />
                <Label text="Até" />
                <TextField fx:id="txtAte" prefWidth="80" />
                <Button id="btnBuscar" onAction="#onClickBuscar" text="Buscar" />
                <Label text="Filtrar por:" />
                <ComboBox fx:id="cbFiltro" prefWidth="150" />
                <Button id="btnLimpar" onAction="#onClickLimparFiltros" text="Limpar Filtros" />
            </HBox>

            <TableView fx:id="tabelaFornecedores" prefHeight="400">
                <columns>
                    <TableColumn prefWidth="140" text="Razão social" />
                    <TableColumn prefWidth="110" text="CNPJ" />
                    <TableColumn prefWidth="180" text="Endereço" />
                    <TableColumn prefWidth="100" text="Telefone" />
                    <TableColumn prefWidth="150" text="Email" />
                    <TableColumn prefWidth="140" text="Pessoa de contato" />
                </columns>
            </TableView>
         <Button id="btnCadastrar" fx:id="btnAddProduto" onAction="#onClickAdicionarProduto" text="Adicionar produto" />

        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.FornecedorController"
            stylesheets="@fornecedores.css">

    <children>
        <BorderPane prefHeight="600.0" prefWidth="800.0">
            <!-- Formulário de dados do fornecedor -->
            <top>
                <GridPane hgap="10.0" vgap="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="CNPJ:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="cnpjField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Endereço:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="enderecoField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Telefone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="telefoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Pessoa de Contato:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="contatoField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </top>

            <!-- Tabela de produtos fornecidos -->
            <center>
                <TableView fx:id="tabelaProdutos">
                    <columns>
                        <TableColumn fx:id="produtoCol" text="Produto"/>
                        <TableColumn fx:id="precoCol" text="Preço Unitário"/>
                        <TableColumn fx:id="qtdCol" text="Quantidade"/>
                        <TableColumn fx:id="totalCol" text="Total"/>
                    </columns>
                </TableView>
            </center>

            <!-- Botões de ação -->
            <bottom>
                <HBox spacing="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <children>
                        <Button text="Adicionar Produto" onAction="#adicionarProduto"/>
                        <Button text="Salvar Fornecedor" onAction="#salvarFornecedor"/>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>

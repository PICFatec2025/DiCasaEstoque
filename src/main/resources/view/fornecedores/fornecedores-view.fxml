<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@fornecedores.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dicasa.estoque.controller.fornecedores.FornecedorController">

    <children>
        <!-- Card Principal -->
        <VBox id="card" alignment="TOP_CENTER" prefWidth="950" spacing="15" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">

            <!-- Cabeçalho -->
            <HBox alignment="CENTER" prefWidth="900" spacing="10">
                <Label id="titleLabel" fx:id="lblTitulo" styleClass="title-label" text="Fornecedores" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font></Label>
            </HBox>

            <!-- Sistema de Busca -->
            <HBox alignment="CENTER_LEFT" prefWidth="900" spacing="10">
                <Label text="Buscar por:" />
                <ComboBox fx:id="cbTipoBusca" prefWidth="150" />
                <TextField fx:id="txtBusca" prefWidth="250" promptText="Digite para buscar..." />
                <Button id="btnBuscar" fx:id="btnBuscar" onAction="#onClickBuscar" text="Buscar" />
                <Button id="btnLimpar" fx:id="btnLimpar" onAction="#onClickLimparBusca" text="Limpar Busca" />
            </HBox>

            <!-- Tabela de Fornecedores -->
            <TableView fx:id="tabelaFornecedores" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colRazaoSocial" prefWidth="150" text="Razão Social" />
                    <TableColumn fx:id="colNomeFantasia" prefWidth="140" text="Nome Fantasia" />
                    <TableColumn fx:id="colCnpj" prefWidth="120" text="CNPJ" />
                    <TableColumn fx:id="colLogradouro" prefWidth="180" text="Logradouro" />
                    <TableColumn fx:id="colComplemento" prefWidth="110" text="Complemento" />
                    <TableColumn fx:id="colBairro" prefWidth="110" text="Bairro" />
                    <TableColumn fx:id="colCidade" prefWidth="120" text="Cidade" />
                    <TableColumn fx:id="colUf" prefWidth="60" text="UF" />
                    <TableColumn fx:id="colCep" prefWidth="90" text="CEP" />
                    <TableColumn fx:id="colTelefones" prefWidth="150" text="Telefones" />
                </columns>
            </TableView>

            <!-- Ações adicionais -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button id="btnCadastrar" fx:id="btnCadastrar" onAction="#onClickCadastrarFornecedor" text="Cadastrar" />
                <Button id="btnExcluir" fx:id="btnExcluir" onAction="#onClickExcluirFornecedor" text="Excluir" />
                <Button id="btnExportar" fx:id="btnExportar" onAction="#onClickExportar" text="Exportar Dados" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>

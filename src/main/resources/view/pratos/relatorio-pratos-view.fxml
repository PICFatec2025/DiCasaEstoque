<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="512.0" prefWidth="802.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.pratos.RelatorioPratosController">

    <VBox alignment="CENTER" prefHeight="512.0" prefWidth="812.0" style="-fx-background-color: #ffe0b2; -fx-padding: 20;">

        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="720.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: black; -fx-border-width: 1;">

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" text="Relatório de pratos" />

            <HBox alignment="CENTER" spacing="8">
                <Label text="Período" />
                <TextField fx:id="txtInicio" prefWidth="80"/>
                <Label text="Até" />
                <TextField fx:id="txtFim" prefWidth="80"/>
                <Button fx:id="btnBuscar" text="Buscar" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
                <Label text="Filtrar por:" />
                <TextField fx:id="txtFiltro" prefWidth="120"/>
                <Button fx:id="btnLimpar" text="Limpar filtros" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
            </HBox>

            <TableView fx:id="tblPratos" prefHeight="280.0" prefWidth="650.0" style="-fx-background-color: #ffe0b2;">
                <columns>
                    <TableColumn fx:id="colIngrediente" prefWidth="300.0" text="Ingrediente" />
                    <TableColumn fx:id="colQuantidade" prefWidth="150.0" text="Quantidade" />
                    <TableColumn fx:id="colUnidade" prefWidth="120.0" text="Unidade" />
                    <TableColumn fx:id="colAcoes" prefWidth="130.0" text="Ações" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnAdicionar" text="Adicionar prato" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
                <Button fx:id="btnFechar" text="Fechar" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
            </HBox>

        </VBox>
    </VBox>
</AnchorPane>

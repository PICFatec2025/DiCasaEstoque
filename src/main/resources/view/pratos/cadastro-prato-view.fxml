<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dicasa.estoque.controller.pratos.CadastroPratoController">

    <VBox alignment="CENTER" spacing="15" prefWidth="640.0" style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 40;">

        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="600.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: black; -fx-border-width: 1;">

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" text="Cadastrar prato" />

            <VBox spacing="10" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
                <Label style="-fx-font-weight: bold;" text="Informações do produto" />
                <TextField fx:id="txtNome" promptText="Nome do prato" />
                <ComboBox fx:id="cbCategoria" promptText="Categoria" />
                <TextArea fx:id="txtDescricao" prefRowCount="3" promptText="Descrição do prato" />
            </VBox>

            <VBox spacing="10" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
                <Label style="-fx-font-weight: bold;" text="Ficha técnica" />
                <HBox spacing="10">
                    <TextField fx:id="txtIngrediente" promptText="Ingrediente" />
                    <TextField fx:id="txtQuantidade" prefWidth="100" promptText="Qtd" />
                    <ComboBox fx:id="cbUnidade" prefWidth="100" promptText="Unidade" />
                    <Button fx:id="btnAdicionar" text="Adicionar ➕" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
                </HBox>

                <TableView fx:id="tblIngredientes" prefHeight="180">
                    <columns>
                        <TableColumn fx:id="colIngrediente" prefWidth="200" text="Ingrediente" />
                        <TableColumn fx:id="colQuantidade" prefWidth="120" text="Quantidade" />
                        <TableColumn fx:id="colUnidade" prefWidth="100" text="Unidade" />
                        <TableColumn fx:id="colAcoes" prefWidth="100" text="Ações" />
                    </columns>
                </TableView>
            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnSalvar" text="Salvar prato" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
                <Button fx:id="btnCancelar" text="Cancelar" style="-fx-background-color: #ffb300; -fx-text-fill: black; -fx-font-weight: bold;" />
            </HBox>

        </VBox>
    </VBox>
</AnchorPane>
